<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibrosCaracteristicasAmpliado">

    <ImageView
        android:id="@+id/imgLibroAmpliado"
        android:layout_width="165dp"
        android:layout_height="191dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/tvTituloAmpliado"
        android:layout_width="350dp"
        android:layout_height="29dp"
        android:background="#ddd"
        android:text="Hola"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/tvAutorAmpliado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLibroAmpliado"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/tvAutorAmpliado"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvEditorialAmpliado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEditorialAmpliado"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvAnioAmpliado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAnioAmpliado"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSinopsisAmpliado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSinopsisAmpliado"
        android:layout_width="350dp"
        android:layout_height="169dp"
        android:layout_marginBottom="44dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>