<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibrosCaracteristicasAmpliado"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLibroAmpliado"
        android:layout_width="150dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="25dp"
        >
        <LinearLayout
            android:padding="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tvTituloAmpliado"
        android:layout_width="350dp"
        android:layout_height="29dp"
        android:background="#ddd"
        android:text="Hola"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/tvAutorAmpliado"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tvEditorialAmpliado"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tvAnioAmpliado"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tvSinopsisAmpliado"
        android:layout_width="350dp"
        android:layout_height="169dp"
        android:background="#ddd"
        android:textColor="#000000"
        android:text="Hola"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="25dp" />

         <Button
             android:id="@+id/btnQrs"
             android:layout_width="150dp"
             android:layout_height="40dp"
             android:layout_marginTop="25dp"
             android:layout_gravity="center"
             android:text="Qrs"
             android:textColor="#000000"
             />
        </LinearLayout>



    </ScrollView>

</LinearLayout>